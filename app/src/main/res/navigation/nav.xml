<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav"
    app:startDestination="@id/onboardingFragment">
    <fragment
        android:id="@+id/onboardingFragment"
        android:name="com.mateuszholik.passwordgenerator.ui.onboarding.OnBoardingFragment"
        android:label="OnboardingFragment">
        <action
            android:id="@+id/action_onboardingFragment_to_createPasswordFragment"
            app:destination="@id/createPasswordFragment"
            app:popUpTo="@id/onboardingFragment"
            app:popUpToInclusive="true" />
        <action
            android:id="@+id/action_onboardingFragment_to_logInFragment"
            app:destination="@id/logInFragment"
            app:popUpTo="@id/onboardingFragment"
            app:popUpToInclusive="true" />
    </fragment>
    <fragment
        android:id="@+id/createPasswordFragment"
        android:name="com.mateuszholik.passwordgenerator.ui.createpin.CreatePinFragment"
        android:label="CreatePasswordFragment" />
    <fragment
        android:id="@+id/logInFragment"
        android:name="com.mateuszholik.passwordgenerator.ui.login.LogInFragment"
        android:label="LogInFragment" />
</navigation>