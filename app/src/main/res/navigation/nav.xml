<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/nav"
    app:startDestination="@id/authenticationHostFragment">
    <fragment
        android:id="@+id/authenticationHostFragment"
        android:name="com.mateuszholik.passwordgenerator.ui.authentication.AuthenticationHostFragment">
        <action
            android:id="@+id/action_authenticationHostFragment_to_logged_user_nav"
            app:destination="@id/logged_user_nav"
            app:enterAnim="@anim/slide_in_right"
            app:exitAnim="@anim/slide_out_left"
            app:popEnterAnim="@anim/slide_in_left"
            app:popExitAnim="@anim/slide_out_right"
            app:popUpTo="@id/authenticationHostFragment"
            app:popUpToInclusive="true" />
    </fragment>
    <include app:graph="@navigation/logged_user_nav" />
</navigation>