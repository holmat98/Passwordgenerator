<?xml version="1.0" encoding="utf-8"?>
<MotionScene 
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:motion="http://schemas.android.com/apk/res-auto">

    <Transition
        motion:constraintSetEnd="@+id/end"
        motion:constraintSetStart="@id/start"
        motion:duration="1000">
       <KeyFrameSet>
       </KeyFrameSet>
        <OnClick motion:targetId="@+id/editPasswordBtn" />
    </Transition>

    <ConstraintSet android:id="@+id/start">
    </ConstraintSet>

    <ConstraintSet android:id="@+id/end">
        <Constraint
            android:id="@+id/deletePasswordBtn"
            motion:layout_constraintTop_toTopOf="parent"
            motion:layout_constraintRight_toRightOf="parent"
            android:layout_marginEnd="16dp"
            android:layout_marginTop="16dp"
            android:layout_width="50dp"
            android:layout_height="50dp"
            />
        <Constraint
            android:id="@+id/editPasswordBtn"
            android:visibility="visible"
            motion:layout_constraintTop_toTopOf="parent"
            motion:layout_constraintRight_toLeftOf="@+id/deletePasswordBtn"
            android:layout_marginEnd="16dp"
            android:layout_marginTop="16dp"
            android:layout_width="50dp"
            android:layout_height="50dp"
            />
        <Constraint
            android:id="@+id/CLProgress"
            android:visibility="invisible" />
        <Constraint
            android:id="@+id/passwordTV"
            android:visibility="invisible" />
        <Constraint
            android:id="@+id/platformNameTIL"
            android:visibility="visible"
            motion:layout_constraintTop_toBottomOf="@id/editPasswordBtn"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_marginTop="16dp"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            />
        <Constraint
            android:id="@+id/passwordNameTIL"
            android:visibility="visible"
            motion:layout_constraintTop_toBottomOf="@id/platformNameTIL"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_marginTop="16dp"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            />
        <Constraint
            android:id="@+id/cancelBtn2"
            android:visibility="visible"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            motion:layout_constraintTop_toBottomOf="@id/passwordNameTIL"
            android:layout_marginTop="16dp"
            />
        <Constraint
            android:id="@+id/saveBtn2"
            android:visibility="visible"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            motion:layout_constraintTop_toTopOf="@id/cancelBtn2"
            />
    </ConstraintSet>
</MotionScene>