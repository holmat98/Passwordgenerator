<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="DefaultText">
        <item name="android:textSize">@dimen/text_size_18</item>
        <item name="android:textColor">@color/white</item>
        <item name="fontFamily">@font/mplus_rounded1c_regular</item>
    </style>

    <style name="Header" parent="DefaultText">
        <item name="android:textSize">@dimen/text_size_40</item>
        <item name="android:textAlignment">center</item>
        <item name="fontFamily">@font/mplus_rounded1c_medium</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="OnboardingText" parent="DefaultText">
        <item name="android:textSize">@dimen/text_size_25</item>
        <item name="android:textAlignment">center</item>
        <item name="fontFamily">@font/mplus_rounded1c_regular</item>
    </style>

    <style name="Button">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/text_size_25</item>
        <item name="textAllCaps">false</item>
        <item name="android:padding">@dimen/padding_8</item>
        <item name="fontFamily">@font/mplus_rounded1c_medium</item>
        <item name="android:letterSpacing">0.03</item>
    </style>

    <style name="Button.White" parent="Button">
        <item name="backgroundTint">@color/white</item>
        <item name="android:textColor">@color/primary_light</item>
    </style>

    <style name="Button.Dark" parent="Button">
        <item name="backgroundTint">@color/primary_light</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="BottomNavigationView">
        <item name="fontFamily">@font/mplus_rounded1c_regular</item>
    </style>
</resources>