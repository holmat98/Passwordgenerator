<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

        <variable
            name="viewModel"
            type="com.mateuszholik.passwordgenerator.ui.loggeduser.passwordvalidationresult.PasswordValidationResultViewModel" />
    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/rounded_dark_background"
        android:orientation="vertical">

        <com.mateuszholik.passwordgenerator.uicomponents.checkbox.AnimatedCheckbox
            android:id="@+id/passwordLengthAC"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_16"
            android:padding="@dimen/padding_8"
            app:changeAnimation="@{viewModel.lengthCondition}"
            app:checkBoxText="@string/password_score_length" />

        <com.mateuszholik.passwordgenerator.uicomponents.checkbox.AnimatedCheckbox
            android:id="@+id/passwordLettersAC"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_16"
            android:padding="@dimen/padding_8"
            app:changeAnimation="@{viewModel.letterCondition}"
            app:checkBoxText="@string/password_score_letter" />

        <com.mateuszholik.passwordgenerator.uicomponents.checkbox.AnimatedCheckbox
            android:id="@+id/passwordUppercaseAC"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_16"
            android:padding="@dimen/padding_8"
            app:changeAnimation="@{viewModel.uppercaseCondition}"
            app:checkBoxText="@string/password_score_uppercase" />

        <com.mateuszholik.passwordgenerator.uicomponents.checkbox.AnimatedCheckbox
            android:id="@+id/passwordNumberAC"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_16"
            android:padding="@dimen/padding_8"
            app:changeAnimation="@{viewModel.numberCondition}"
            app:checkBoxText="@string/password_score_number" />

        <com.mateuszholik.passwordgenerator.uicomponents.checkbox.AnimatedCheckbox
            android:id="@+id/passwordSpecialCharacterAC"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_16"
            android:layout_marginBottom="@dimen/margin_16"
            android:padding="@dimen/padding_8"
            app:changeAnimation="@{viewModel.specialCharacterCondition}"
            app:checkBoxText="@string/password_score_special_character" />

    </LinearLayout>
</layout>