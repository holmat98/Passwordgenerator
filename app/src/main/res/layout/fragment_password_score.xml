<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

        <variable
            name="password"
            type="String" />
        <variable
            name="viewModel"
            type="com.mateuszholik.passwordgenerator.ui.loggeduser.passwordscore.PasswordScoreViewModel" />
    </data>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/primary"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:orientation="vertical">

            <TextView
                android:id="@+id/passwordTV"
                style="@style/Header"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="@{password}"/>

            <com.mateuszholik.passwordgenerator.uicomponents.chart.ProgressChartView
                android:id="@+id/passwordScorePCV"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="@dimen/margin_16"
                app:setProggress="@{viewModel.passwordScore}" />

            <com.mateuszholik.passwordgenerator.uicomponents.checkbox.AnimatedCheckbox
                android:id="@+id/passwordLengthAC"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="@dimen/margin_16"
                android:layout_marginTop="@dimen/margin_16"
                android:padding="@dimen/padding_8"
                app:changeAnimation="@{viewModel.lengthCondition}"
                app:checkBoxText="@string/password_score_length" />

            <com.mateuszholik.passwordgenerator.uicomponents.checkbox.AnimatedCheckbox
                android:id="@+id/passwordLettersAC"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="@dimen/margin_16"
                android:layout_marginTop="@dimen/margin_16"
                android:padding="@dimen/padding_8"
                app:changeAnimation="@{viewModel.letterCondition}"
                app:checkBoxText="@string/password_score_letter" />

            <com.mateuszholik.passwordgenerator.uicomponents.checkbox.AnimatedCheckbox
                android:id="@+id/passwordUppercaseAC"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="@dimen/margin_16"
                android:layout_marginTop="@dimen/margin_16"
                android:padding="@dimen/padding_8"
                app:changeAnimation="@{viewModel.uppercaseCondition}"
                app:checkBoxText="@string/password_score_uppercase" />

            <com.mateuszholik.passwordgenerator.uicomponents.checkbox.AnimatedCheckbox
                android:id="@+id/passwordNumberAC"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="@dimen/margin_16"
                android:layout_marginTop="@dimen/margin_16"
                android:padding="@dimen/padding_8"
                app:changeAnimation="@{viewModel.numberCondition}"
                app:checkBoxText="@string/password_score_number" />

            <com.mateuszholik.passwordgenerator.uicomponents.checkbox.AnimatedCheckbox
                android:id="@+id/passwordSpecialCharacterAC"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="@dimen/margin_16"
                android:layout_marginTop="@dimen/margin_16"
                android:padding="@dimen/padding_8"
                app:changeAnimation="@{viewModel.specialCharacterCondition}"
                app:checkBoxText="@string/password_score_special_character" />

        </LinearLayout>

    </ScrollView>
</layout>