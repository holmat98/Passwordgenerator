<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="@dimen/margin_16"
    android:layout_marginVertical="@dimen/margin_8"
    android:background="@drawable/rounded_lighter_dark_background_with_red_stroke">

    <ImageView
        android:id="@+id/warningIV"
        android:layout_width="75dp"
        android:layout_height="75dp"
        android:layout_margin="@dimen/margin_8"
        android:contentDescription="@string/warning_icon"
        android:scaleType="center"
        android:src="@drawable/ic_outdated"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/platformNameTV"
        style="@style/PasswordItemText"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginHorizontal="@dimen/margin_8"
        android:layout_marginBottom="@dimen/margin_8"
        app:layout_constraintBottom_toTopOf="@id/passwordTV"
        app:layout_constraintEnd_toStartOf="@id/copyPasswordIB"
        app:layout_constraintStart_toEndOf="@id/warningIV"
        app:layout_constraintTop_toTopOf="@id/warningIV" />

    <TextView
        android:id="@+id/passwordTV"
        style="@style/PasswordItemText"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginHorizontal="@dimen/margin_8"
        android:inputType="textPassword"
        app:layout_constraintBottom_toBottomOf="@id/warningIV"
        app:layout_constraintEnd_toStartOf="@id/copyPasswordIB"
        app:layout_constraintStart_toEndOf="@id/warningIV"
        app:layout_constraintTop_toBottomOf="@id/platformNameTV" />

    <ImageButton
        android:id="@+id/copyPasswordIB"
        android:layout_width="75dp"
        android:layout_height="0dp"
        android:layout_marginEnd="@dimen/margin_8"
        android:background="@drawable/selector_transparent_button"
        android:contentDescription="@string/copy_button"
        android:src="@drawable/ic_copy"
        app:layout_constraintBottom_toBottomOf="@id/warningIV"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/warningIV"
        app:tint="@color/red" />

</androidx.constraintlayout.widget.ConstraintLayout>
