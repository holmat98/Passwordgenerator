<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".view.PasswordTesterFragment"
    android:id="@+id/passwordTesterLayout"
    android:background="@drawable/background3"
    >

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/testPasswordET"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="16dp"
        tools:layout_editor_absoluteX="16dp">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/testPasswordValueET"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/transparent"
            android:hint="@string/password"
            android:textColor="@color/light_black"
            android:textSize="18sp"
            android:backgroundTint="@color/light_black"
            />

    </com.google.android.material.textfield.TextInputLayout>

    <Button
        android:id="@+id/testPasswordBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/testPasswordET"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:text="@string/test"
        android:textColor="@color/white"
        android:layout_marginTop="16dp"
        />

    <ImageView
        android:id="@+id/resultIV"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:src="@drawable/ic_safe_password"
        />

</androidx.constraintlayout.widget.ConstraintLayout>