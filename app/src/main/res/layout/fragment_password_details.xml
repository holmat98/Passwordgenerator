<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

        <variable
            name="viewModel"
            type="com.mateuszholik.passwordgenerator.ui.loggeduser.passworddetails.PasswordDetailsViewModel" />

        <variable
            name="password"
            type="com.mateuszholik.data.repositories.models.Password" />
    </data>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/primary">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/platformNameTV"
                style="@style/Header"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="@dimen/margin_16"
                android:layout_marginTop="@dimen/margin_16"
                android:text="@{password.platformName}" />

            <LinearLayout
                android:id="@+id/passwordLL"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="@dimen/margin_16"
                android:layout_marginTop="@dimen/margin_16"
                android:background="@drawable/rounded_dark_background"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/passwordTV"
                    style="@style/DefaultText"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginHorizontal="@dimen/margin_16"
                    android:layout_weight="1"
                    android:text="@{password.password}" />

                <ImageButton
                    android:id="@+id/copyPasswordIB"
                    android:layout_width="75dp"
                    android:layout_height="75dp"
                    android:layout_marginVertical="@dimen/margin_8"
                    android:layout_marginEnd="@dimen/margin_8"
                    android:background="@drawable/button_background"
                    android:onClick="@{() -> viewModel.copyPasswordToClipboard()}"
                    android:src="@drawable/ic_copy" />


            </LinearLayout>

            <LinearLayout
                android:id="@+id/passwordScoreLL"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="@dimen/margin_16"
                android:layout_marginTop="@dimen/margin_16"
                android:background="@drawable/rounded_dark_background"
                android:orientation="vertical">

                <TextView
                    style="@style/Header"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="@dimen/margin_16"
                    android:layout_marginTop="@dimen/margin_16"
                    android:text="@string/password_details_password_strength" />

                <com.mateuszholik.passwordgenerator.uicomponents.chart.ProgressChartView
                    android:id="@+id/passwordScorePCV"
                    android:layout_width="150dp"
                    android:layout_height="150dp"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginVertical="@dimen/margin_16"
                    app:setProggress="@{viewModel.passwordScore}" />

            </LinearLayout>

            <TextView
                style="@style/DefaultText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/margin_16"
                android:layout_marginTop="@dimen/margin_16"
                android:text="@string/password_details_expiring_date_proposal" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="@dimen/margin_16"
                android:layout_marginTop="@dimen/margin_16"
                android:background="@drawable/rounded_dark_background"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/expiringDateTV"
                    style="@style/DefaultText"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginHorizontal="@dimen/margin_16"
                    android:layout_weight="1"
                    android:text="@{password.expiringDate.toString()}" />

                <ImageButton
                    android:id="@+id/setReminderIB"
                    android:layout_width="75dp"
                    android:layout_height="75dp"
                    android:layout_marginVertical="@dimen/margin_8"
                    android:layout_marginEnd="@dimen/margin_8"
                    android:background="@drawable/button_background"
                    android:src="@drawable/ic_add_alarm" />

            </LinearLayout>

            <FrameLayout
                android:id="@+id/passwordValidationResult"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="@dimen/margin_16"
                android:layout_marginTop="@dimen/margin_16" />

        </LinearLayout>

    </ScrollView>
</layout>