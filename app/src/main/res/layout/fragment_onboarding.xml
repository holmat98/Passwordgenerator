<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.viewpager2.widget.ViewPager2
        android:id="@+id/viewpager"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <com.google.android.material.tabs.TabLayout
        android:id="@+id/tabLayout"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:layout_marginBottom="@dimen/margin_8"
        android:background="@null"
        app:layout_constraintBottom_toTopOf="@id/doubleButton"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:tabBackground="@drawable/tab_layout_items"
        app:tabGravity="center"
        app:tabIndicatorHeight="0dp"
        app:tabPaddingEnd="@dimen/margin_8"
        app:tabPaddingStart="@dimen/margin_8" />

    <com.mateuszholik.uicomponents.buttons.DoubleButton
        android:id="@+id/doubleButton"
        android:layout_width="0dp"
        android:layout_height="55dp"
        android:layout_margin="@dimen/margin_16"
        app:firstBackground="@color/white"
        app:firstText="@string/button_skip"
        app:firstTextColor="@color/primary"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:secondBackground="@color/primary_light"
        app:secondText="@string/button_next"
        app:secondTextColor="@color/white" />
</androidx.constraintlayout.widget.ConstraintLayout>