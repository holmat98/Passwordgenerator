<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    >

    <TextView
        android:id="@+id/textView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@id/platformNameTIL"
        android:text="@string/enter_the_name_of_platform_where_you_will_use_this_password"
        android:textSize="18sp"
        android:textColor="@color/black"
        android:gravity="center"
        />

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/platformNameTIL"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_margin="16dp"
        app:layout_constraintTop_toBottomOf="@id/textView"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toTopOf="@id/cancelBtn">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/platformNameET"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/transparent"
            android:hint="@string/platform_name"
            android:textColor="@color/light_black"
            android:textSize="18sp"
            android:backgroundTint="@color/light_black"
            />

    </com.google.android.material.textfield.TextInputLayout>

    <Button
        android:id="@+id/cancelBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/platformNameTIL"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@id/saveBtn"
        app:layout_constraintBottom_toBottomOf="parent"
        android:text="@string/cancel"
        android:background="@color/transparent"
        android:textColor="@color/veryWeak"
        />

    <Button
        android:id="@+id/saveBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toRightOf="@id/cancelBtn"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="@id/cancelBtn"
        android:text="@string/save"
        android:background="@color/transparent"
        android:textColor="@color/green"
        />

</androidx.constraintlayout.widget.ConstraintLayout>