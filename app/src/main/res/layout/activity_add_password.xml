<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/green"
    tools:context=".view.AddPasswordActivity"
    >

    <TextView
        android:id="@+id/addPasswordTV2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@id/platformNameET2"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:text="@string/add_password"
        android:textSize="25sp"
        android:gravity="center"
        android:layout_marginTop="16dp"
        android:textColor="@color/purple"
        />

    <EditText
        android:id="@+id/platformNameET2"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        app:layout_constraintTop_toBottomOf="@id/addPasswordTV2"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toTopOf="@id/passwordValueET"
        android:layout_marginTop="16dp"
        android:textSize="20sp"
        android:hint="@string/platform_name"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:paddingStart="8dp"
        android:paddingEnd="8dp"
        android:background="@drawable/background_style"
        />

    <EditText
        android:id="@+id/passwordValueET"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        app:layout_constraintTop_toBottomOf="@id/platformNameET2"
        app:layout_constraintBottom_toTopOf="@id/addPasswordBtn3"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="16dp"
        android:textSize="20sp"
        android:hint="@string/password"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:paddingStart="8dp"
        android:paddingEnd="8dp"
        android:background="@drawable/background_style"
        />

    <Button
        android:id="@+id/addPasswordBtn3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/passwordValueET"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:backgroundTint="@color/purple"
        android:textColor="@color/white"
        android:text="Add"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="16dp"
        />

</androidx.constraintlayout.widget.ConstraintLayout>