<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/header"
        style="@style/MediumHeader"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/margin_16"
        android:text="@string/generated_password"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="@drawable/rounded_ligter_dark_background_with_green_stroke"
        android:layout_margin="@dimen/margin_16"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/header"
        app:layout_constraintBottom_toBottomOf="parent">

        <ImageButton
            android:id="@+id/leftButton"
            android:layout_width="75dp"
            android:layout_height="75dp"
            android:layout_margin="@dimen/margin_16"
            android:background="@drawable/selector_transparent_button"
            android:contentDescription="@string/copy_button"
            android:src="@drawable/ic_copy" />

        <TextView
            android:id="@+id/text"
            style="@style/Description"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_weight="1" />

        <ImageButton
            android:id="@+id/rightButton"
            android:layout_width="75dp"
            android:layout_height="75dp"
            android:layout_margin="@dimen/margin_16"
            android:background="@drawable/selector_transparent_button"
            android:contentDescription="@string/dialog_button_save"
            android:src="@drawable/ic_save" />

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
