<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item
        android:id="@+id/pinBackground"
        android:bottom="@dimen/pin_edittext_drawable_margin"
        android:end="@dimen/pin_edittext_drawable_margin"
        android:start="@dimen/pin_edittext_drawable_margin"
        android:top="@dimen/pin_edittext_drawable_margin">
        <shape android:shape="rectangle">
            <solid android:color="@color/pin_edittext_background" />
            <corners android:radius="@dimen/pin_edittext_radius" />
        </shape>
    </item>
    <item>
        <shape>
            <stroke
                android:width="@dimen/pin_edittext_stroke"
                android:color="@color/white" />
            <corners android:radius="@dimen/pin_edittext_radius" />
        </shape>
    </item>
</layer-list>